# Application Settings
APP_NAME=SdFramework
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging Settings
LOG_CHANNEL=app
LOG_LEVEL=debug
LOG_PATH=var/logs

# Database Settings
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sdframework
DB_USERNAME=root
DB_PASSWORD=

# Cache Settings
CACHE_STORE=file
CACHE_PREFIX=sd_
CACHE_PATH=var/cache

# Session Settings
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_PATH=var/sessions

REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0
REDIS_TIMEOUT=0.0
REDIS_RETRY_INTERVAL=0
REDIS_READ_TIMEOUT=0.0
REDIS_SESSION_DB=1  # Different from cache DB

# Error Reporting
ERROR_REPORTING=E_ALL
DISPLAY_ERRORS=true
LOG_ERRORS=true

# Security
APP_KEY=